<%- include("partials/header.ejs") %>
<% if(locals.posts) {%>
<% posts.forEach(post => {%>
<section id="<%= post.id %>">
    <div class="container my-4">
        <div class="p-5 text-center bg-body-tertiary rounded-3">
            <div class="userProfilePic text-left">
                <img src="images/<%= post.profileImage %>" class="mx-2 card-img-top rounded-circle d-inline-flex float-start" alt="..." style="text-align: left;">
                <h5 class="text-body-emphasis mb-2 px-5" style="text-align: left;"><%= post.name %></h5>
            </div>
          <h3 class="text-body-emphasis pb-3 fs-4"><%= post.postTitle %></h3>
          <p class="col-lg-12 mx-auto fs-8 text-muted" style="text-align: justify;">
            <%= post.postDesc %>
          </p>
          <img src="images/<%= post.postImage %>" class="card-img-top postIMG" alt="...">
          <div class="gap-2">
            <form method="get" action="/get_Post_Edit/<%= post.id %>" style="display: inline;">
              <button class="btn btn-outline-secondary btn-sm px-4 rounded-pill editButton" type="submit">
                Edit
              </button>
            </form>
            <form method="post" action="/delete_post/<%= post.id %>" style="display: inline;">
              <button class="btn btn-outline-secondary btn-sm px-4 rounded-pill" type="submit">
                Delete
            </button>
            </form>
            
          </div>
        </div>
      </div>
</section>
<% })}%>

<%- include("partials/footer.ejs") %>